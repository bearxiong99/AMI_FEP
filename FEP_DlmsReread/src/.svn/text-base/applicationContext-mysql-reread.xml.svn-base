				</property>
			</bean>
		</property>	
		<!-- 设置对时策略状态 -->
		<property name="setTimeSynStrategyStateSql">
			<value>
				<![CDATA[
				UPDATE TJ_ZDDSCL SET XGBJ=? WHERE DWDM=? AND RWLX=? AND CRON=?
				]]>
			</value>
		</property>
		<!-- 删除对时策略状态 -->
		<property name="deleteTimeSynStrategySql">
			<value>
				<![CDATA[
				DELETE FROM TJ_ZDDSCL WHERE DWDM=? AND RWLX=? AND CRON=?
				]]>
